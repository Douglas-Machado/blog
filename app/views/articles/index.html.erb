<h1>Articles</h1>

<ul>
    <% @articles.each do |article| %>
    <li>
        <a style="display:block" href="/articles/<%= article.id %>">
            <%= article.title %>
        </a>
    </li>
    <li>
        <%= link_to article.title, article %>
    </li>
    <% end %>
</ul>

<%= link_to "New article", new_article_path %>